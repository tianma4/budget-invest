# Budget Invest Development Environment Variables
# Copy this file to .env and modify as needed

# Application Configuration
EZBOOKKEEPING_MODE=development
EZBOOKKEEPING_LOG_LEVEL=debug
EZBOOKKEEPING_PORT=8080
EZBOOKKEEPING_SECRET_KEY=dev_secret_key_please_change_in_production
EZBOOKKEEPING_TOKEN_EXPIRES_TIME=2592000
EZBOOKKEEPING_TEMPORARY_TOKEN_EXPIRES_TIME=300

# Database Configuration (PostgreSQL)
EZBOOKKEEPING_DB_TYPE=postgres
EZBOOKKEEPING_DB_HOST=postgres
EZBOOKKEEPING_DB_PORT=5432
EZBOOKKEEPING_DB_NAME=budget_invest
EZBOOKKEEPING_DB_USER=budget_invest
EZBOOKKEEPING_DB_PASSWD=budget_invest_password
EZBOOKKEEPING_DB_SSL_MODE=disable

# Alternative: SQLite for simpler setup
# EZBOOKKEEPING_DB_TYPE=sqlite3
# EZBOOKKEEPING_DB_PATH=/ezbookkeeping/data/budget_invest.db

# Redis Configuration
EZBOOKKEEPING_REDIS_ENABLED=true
EZBOOKKEEPING_REDIS_HOST=redis
EZBOOKKEEPING_REDIS_PORT=6379
EZBOOKKEEPING_REDIS_PASSWORD=
EZBOOKKEEPING_REDIS_DB_INDEX=0

# User Management
EZBOOKKEEPING_ENABLE_USER_REGISTER=true
EZBOOKKEEPING_ENABLE_USER_FORGET_PASSWORD=true
EZBOOKKEEPING_ENABLE_USER_VERIFY_EMAIL=false

# Development Features
EZBOOKKEEPING_ENABLE_API_PROXY=false
EZBOOKKEEPING_API_PROXY_URL=

# Logging
EZBOOKKEEPING_LOG_FILE_ENABLED=true
EZBOOKKEEPING_LOG_FILE_PATH=/ezbookkeeping/log/budget-invest.log

# Exchange Rates (optional)
EZBOOKKEEPING_EXCHANGE_RATES_DATA_SOURCE=
EZBOOKKEEPING_EXCHANGE_RATES_API_KEY=

# Email Configuration (for password reset - optional)
EZBOOKKEEPING_ENABLE_SMTP=false
EZBOOKKEEPING_SMTP_HOST=
EZBOOKKEEPING_SMTP_PORT=587
EZBOOKKEEPING_SMTP_TLS_ENABLED=true
EZBOOKKEEPING_SMTP_USERNAME=
EZBOOKKEEPING_SMTP_PASSWORD=
EZBOOKKEEPING_SMTP_FROM_ADDRESS=noreply@budget-invest.local